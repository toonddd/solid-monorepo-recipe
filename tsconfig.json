{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
  },
  "references": [
    {
      "path": "./app"
    },
    {
      "path": "./component-stories"
    },
    {
      "path": "./components"
    }
  ]
}
